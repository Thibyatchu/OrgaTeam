{% extends 'empty.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/css/style.css') }}">
{% endblock %}

{% block body %}

    <form method="post">
    
        {% if error %}
            <div class="error-container">
                <h1>Une erreur est survenue</h1>
                {% if error.message is defined %}
                    <p>{{ error.message }}</p>
                {% endif %}
            </div>
        {% endif %}

        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="row w-100 m-0">
                    <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                        <div class="card col-lg-4 mx-auto">
                            <div class="card-body px-5 py-5">
                                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control p_input" autocomplete="username" required autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" name="_password" id="password" class="form-control p_input" autocomplete="current-password" required>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <a href="{{ path('app_home') }}" class="forgot-pass">Revenir au site</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
