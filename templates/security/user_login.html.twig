{% extends 'empty.html.twig' %}

{% block title %}User Login{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h1 class="h3 mb-3 font-weight-normal text-center">User Login</h1>
                            <form method="post" action="{{ path('app_user_login') }}">
                                {% if error %}
                                    <div class="alert alert-danger">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" name="_username" id="username" class="form-control p_input" value="{{ last_username }}" required autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" name="_password" id="password" class="form-control p_input" required>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="text-center">
                                    <button class="btn btn-primary btn-block enter-btn" type="submit">Sign in</button>
                                </div>
                            </form>
                            <div class="form-group d-flex align-items-center justify-content-between mt-3">
                                <a href="{{ path('app_user_register') }}" class="btn btn-secondary btn-block">Don't have an account? Register</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}