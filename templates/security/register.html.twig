{% extends 'empty.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('teamtheme/assets/css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.username) }}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password) }}
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-primary btn-block enter-btn" type="submit">Register</button>
                                </div>
                            {{ form_end(form) }}
                            <div class="form-group d-flex align-items-center justify-content-between mt-3">
                                <a href="{{ path('app_user_login') }}" class="btn btn-secondary btn-block">Already have an account? Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}