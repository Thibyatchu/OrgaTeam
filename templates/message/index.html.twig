{% extends 'empty.html.twig' %}

{% block title %}Ajouter un Message{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('teamtheme/assets/css/style.css') }}">

<div class="row">
    <div class="col-md-8 offset-md-2 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ajouter un Message</h4>
                <form method="post" action="">
                    <div class="form-group">
                        <label for="nom">Nom <span style="color:red">*</span></label>
                        <input type="text" id="nom" name="nom" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="prenom">Prénom <span style="color:red">*</span></label>
                        <input type="text" id="prenom" name="prenom" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email <span style="color:red">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="libelle">Libellé <span style="color:red">*</span></label>
                        <textarea id="libelle" name="libelle" class="form-control" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    <a href="{{ path('app_user_login') }}" class="btn btn-secondary ml-2">Retour à la connexion</a>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}